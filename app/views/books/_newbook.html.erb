<h2>New book</h2>
<%= form_for(book) do |f| %>
<%= render 'layouts/error_messages', model: book %>

  <div class="field row">
    <label>Title</label><br>
    <%= f.text_field :title , class: "col-xs-12" %>
  </div>

  <div class="field row">
    <label>Opinion</label><br>
    <%= f.text_area :body , class: "col-xs-12" %>
  </div>

  <div class="field row">
    <%= f.submit 'Create Book' , class: "col-xs-12 btn btn-primary" %>
  </div>

<% end %>



