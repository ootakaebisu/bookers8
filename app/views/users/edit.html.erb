<div class="container">
  
  <h2>User info</h2>
  
  <%= form_for(@user) do |f| %>
  <%= render 'layouts/error_messages', model: @user %>
    
    <div>
      <label>Name</label><br>
      <%= f.text_field :name %>
    </div>
    
    <div>
      <label>Image</label><br>
      <%= f.attachment_field :profile_image %>
    </div>
    
    <div>
      <label>Introduction</label><br>
      <%= f.text_area :introduction %>
    </div>
    
    <div>
      <%= f.submit 'Update User' %>
    </div>
  
  <% end %>
  
</div>